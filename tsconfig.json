{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "module": "esnext",
        "target": "es6",
        "lib": ["esnext", "DOM"],
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": [".yarn/*", "static/*"]
}
